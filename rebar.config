{sub_dirs, ["apps/*", "rel"]}.
{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.2.4"}}},
    {procket, ".*", {git, "https://github.com/msantos/procket.git", {branch, "master"}}}
    ]}.

{erl_opts, [ warn_unused_vars
           , warn_export_all
           , warn_shadow_vars
           , warn_unused_import
           , warn_unused_function
           , warn_bif_clash
           , warn_unused_record
           , warn_deprecated_function
           , warn_obsolete_guard
           , strict_validation
           , warn_export_vars
           , warn_exported_vars
           , warn_missing_spec
           , warn_untyped_record
           , debug_info]}.

{xref_checks, [undefined_function_calls]}.

{cover_enabled, true}.
{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}]}.

{relx, [{release, {seds, "0.3.0"},
        [
         seds,
         lager,
         procket,
         sasl
        ]},
        {dev_mode, true},
        {include_erts, false},
        {sys_config, "rel/sys.config"},
        {extended_start_script, true}]}.

{profiles, [{prod, [{relx, [
                            {dev_mode, false},
                            {include_erts, true}
                           ]}]}]}.
